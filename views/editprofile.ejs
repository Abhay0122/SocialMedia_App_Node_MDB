        <div class="siginPage">
            <h1>Edit profile</h1>
            <div class="editprofileform">
                <form action="/profileimage" method="post" enctype="multipart/form-data">
                    <img height="100" class="previewImg" src="/assets/<%= user.avatar%>" alt="">
                    <input type="file" name="avatar" class="uploadfile">
                    <input type="hidden" name="oldavatar" value="<%= user.avatar%>">
                    <button>Upload image</button>
                </form>
                <!--  -->
                <form action="/userinfo" method="post">
                    
                </form>
            </div>

        </div>

        <!--  -->
        <%- include('./Partials/footer')%>

            <script>
                const uploadfile = document.querySelector(".uploadfile");
                const preview = document.querySelector(".previewImg");

                uploadfile.addEventListener('change', function (e) {
                    preview.src = URL.createObjectURL(e.target.files[0]);
                });
            </script>