<%- include('./Partials/header')%>
    <!--  -->
    <div class="SignInForm bg-dark container w-100 ">
        <form action="/signup" method="post" class="form-control m-auto w-50">
            <div class="row">
                <div class="col">
                    <input type="text" name="firstname" class="form-control" placeholder="First name" aria-label="First name">
                </div>
                <div class="col">
                    <input type="text" name="lastname" class="form-control" placeholder="Last name" aria-label="Last name">
                </div>
            </div>
            <div class="mb-3 mt-3">
                <input type="email" name="email" placeholder="Email address" class="form-control" id="exampleInputEmail1"
                    aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
                <input type="password" name="password" placeholder="Password" class="form-control" id="exampleInputPassword1">
            </div>
            <div class="col mb-3">
                <h6>Date of birth:</h6>
                <input type="date" name="dob" class="form-control">
            </div>
            <h6>Gender:</h6>
            <div class="row ps-3 mb-3">
                <div class="form-check col">
                    <input class="form-check-input" type="radio" name="gender" id="flexRadioDefault1">
                    <label class="form-check-label" for="flexRadioDefault1">
                        Male
                    </label>
                </div>
                <div class="form-check col">
                    <input class="form-check-input" type="radio" name="gender" id="flexRadioDefault2" checked>
                    <label class="form-check-label" for="flexRadioDefault2">
                        Female
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Sign up</button>
        </form>
        <a href="/">I have already an account?</a>
    </div>


    <!--  -->
    <%- include('./Partials/footer')%>